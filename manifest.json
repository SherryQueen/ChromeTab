{
  "manifest_version": 3,
  "name": "56„ÅÆTab",
  "version": "1.0",
  "description": "Build an extension for myself",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "24": "assets/icon24.png",
    "36": "assets/icon36.png",
    "48": "assets/icon48.png",
    "64": "assets/icon64.png",
    "128": "assets/icon128.png"
  },
  "permissions": ["tabs", "topSites"],
  "host_permissions": ["https://cn.bing.com/", "https://v1.hitokoto.cn/"],
  "content_scripts": [
    { "matches": ["https://juejin.cn/post/*"], "js": ["content-scripts/juejin.js"] },
    { "matches": ["https://*.zhihu.com/*"], "js": ["content-scripts/zhihu.js"] }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src * data: blob: filesystem:;img-src * data:;"
  }
}
